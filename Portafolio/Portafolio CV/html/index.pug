mixin article (title, description)
    article.article__global
        i(class!=attributes.class)
        h4.article__global--title= title
        p.article__global--description= description
mixin icon()
    i.fas.fa-angle-double-right
mixin slide (href, a, link )
    .slide.s1
        .img.s2
            img(src=href, alt="")
            a.link(href="#"): i.fas.fa-link
        a.s2(href=link)= a

